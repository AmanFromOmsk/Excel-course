{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "semi":"off",
        "arrow-parens":"off",
        "comma-dangle":"off",
        "require-jsdoc":"off",
        "object-curly-spacing":"off",
        "quotes":"off",
        "eol-last":"off",
        "indent":"off",
        "linebreak-style":"off",
        "spaced-comment":"off",
        "padded-blocks":"off",
        "no-trailing-spaces":"off",
        "operator-linebreak":"off"
    },
    "extends": ["eslint:recommended", "google"]
}